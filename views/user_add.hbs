    <div class="container">
  <h2 style="text-align: center;">Registration Form</h2>
  <form action="/insert" method="post">
    <div class="form-group">
      <label for="name"> First Name:</label>
      <input type="text" class="form-control" id="firstname" placeholder="Enter Name" name="firstname" required>
    </div>
    <div class="form-group">
      <label for="email">Last Name:</label>
      <input type="text" class="form-control" id="lastname" placeholder="Enter Last Name" name="lastname" required>
    </div>
    <div class="form-group">
      <label for="gender">Gender:</label>
      <input type="radio" id="male" name="optradio" value="male">
      <label for="html">Male</label>
      <input type="radio" id="female" name="optradio" value="female">
      <label for="female">Female</label>
    </div>
<div class="form-group">
      <label for="phone">City:</label>
      <input type="text" class="form-control" id="city" placeholder="Enter City" name="city" required>
    </div>
     <div class="form-group">
      <label for="phone">Address:</label>
      <textarea type="text" class="form-control" id="address" placeholder="Enter Phone No" name="address" required>
      </textarea>
    </div>
    <div class="form-group">
        <input type="file" id="file" name="file">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>
